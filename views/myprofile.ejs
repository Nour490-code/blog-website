<%- include('./partials/header')-%>
<div class="blog profile-container">
    <h1 class="prof-head">Profile</h1>
    <h4 class="details">Fullname: <span><%= user.fullname %> </span></h5>
    <h4 class="details">You Have Published: <span><%= length %> blogs</span></h5>
    <h4 class="details">Email: <span><%= user.email %> </span></h5>
</div>

<div class="container"> 
    <h1 class="myblogs">My Blogs</h1>
    <% if(blogs.length > 0){ %>
        <% blogs.forEach(blog => { %>
            <div class="blog">
                <h3 class="title"><%= blog.title %></h3>
                <h4 class="description"><%= blog.description %></h4>
                <div class="btns">
                    <a class="read-more" href='/blogs/<%= blog._id %> '>Read More</a>
                    <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
                        <button class="delete" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <p>You didn't publish any blogs yet</p>
    <%}%>
</div>
</body>
</html>