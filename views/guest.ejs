<%- include('./partials/guestheader') %> 
    <div class="container">
        <% if(blogs.length > 0){ %>
            <% blogs.forEach(blog => { %>
                <div class="blog">
                    <h3 class="title"><%= blog.title %></h3>
                    <span class="author"><%= blog.author %></span>
                    <p class="description"><%= blog.description %></p>
                    <a class="read-more" href='/blogs/<%= blog._id %> '>Read More</a>
                </div>
            <% }) %>
        <% } else { %>
            <p>There are no blogs at the moment</p>
        <%}%>
    </div>
</body>
</html>