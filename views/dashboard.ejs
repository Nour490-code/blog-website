<%- include('./partials/header')-%>
<% if(blogs.length > 0){ %>
    <% blogs.forEach(blog => { %>
        <h3><%= blog.title %></h3>
        <span><%= blog.author %></span>
        <h4><%= blog.description %></h4>
        <a href='/blogs/<%= blog._id %> '>Read More</a>
    <% }) %>
<% } else { %>
    <p>There are no blogs at the moment</p>
<%}%>
</body>
</html>